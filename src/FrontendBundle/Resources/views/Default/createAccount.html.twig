{% extends 'FrontendBundle:Default:main.html.twig'  %}
{% block title %}Create Account - Agile SCRUM{% endblock %}
{% block content_header %}
    {#    <header class="intro-header" style="background-image: url('{{asset('bundles/frontend/img/contact-bg.jpg')}}')">#}
    <header class="intro-header" style="background-image: url('{{asset('bundles/frontend/img/scrum4.jpg')}}')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="page-heading">
                        <h1>Register with us</h1>
                        {#<hr class="small">
                        <span class="subheading">Have questions? I have answers (maybe).</span>#}
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block content %}
    
    {{ filters.showMessage('messageFrontendSuccess', 'success')}}
    {{ filters.showMessage('messageFrontendError', 'danger')}}
    
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <p>Want to get in touch with me? Fill out the form below to send me a message and I will try to get back to you within 24 hours!</p>
        <!-- Contact Form - Enter your email address on line 19 of the mail/contact_me.php file to make this form work. -->
        <!-- WARNING: Some web hosts do not allow emails to be sent through forms to common mail hosts like Gmail or Yahoo. It's recommended that you use a private domain email address! -->
        <!-- NOTE: To use the contact form, your site must be on a live web host with PHP! The form will not work locally! -->
        {{ form_start(form, {'action': path('frontend_create_account'), 'method': 'POST', 'id':'contactForm'}) }}
        {#        <form name="sentMessage" id="contactForm" novalidate>#}
        <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
                {{ form_label(form.name)}}
                {{ form_widget(form.name, {'attr':{'class':'form-control'}}) }}
                {{ form_errors(form.name) }}
            </div>
        </div>
        <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
                {{ form_label(form.lastname)}}
                {{ form_widget(form.lastname, {'attr':{'class':'form-control'}}) }}
                {{ form_errors(form.lastname) }}
            </div>
        </div>
        <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
                {{ form_label(form.cellphone)}}
                {{ form_widget(form.cellphone, {'attr':{'class':'form-control'}}) }}
                {{ form_errors(form.cellphone) }}
            </div>
        </div>
        <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
                {{ form_label(form.email)}}
                {{ form_widget(form.email.first, {'attr':{'class':'form-control'}}) }}
                {{ form_errors(form.email.first) }}
            </div>
            <div class="form-group col-xs-12 floating-label-form-group controls">
                {{ form_label(form.email.second)}}
                {{ form_widget(form.email.second, {'attr':{'class':'form-control'}}) }}
                {{ form_errors(form.email.second) }}
            </div>
        </div>
        <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
                {{ form_label(form.password)}}
                {{ form_widget(form.password.first, {'attr':{'class':'form-control'}}) }}
                {{ form_errors(form.password.first) }}
            </div>
            <div class="form-group col-xs-12 floating-label-form-group controls">
                {{ form_label(form.password.second)}}
                {{ form_widget(form.password.second, {'attr':{'class':'form-control'}}) }}
                {{ form_errors(form.password.second) }}
            </div>
        </div>
        <br>
        <div id="success"></div>
        <div class="row">
            <div class="form-group col-xs-12">
                {{ form_widget(form._token) }} 
                {{ form_widget(form.submit, {'attr':{'class':'btn btn-default'}}) }} 
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}