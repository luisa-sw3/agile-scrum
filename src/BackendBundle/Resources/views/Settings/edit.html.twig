{% extends 'BackendBundle:Default:main.html.twig' %}
{% block title %}{{'backend.setting.settings'|trans}}{% endblock %}
{% block content %}
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                {{'backend.setting.settings'|trans}}
                <a href="{{ app.request.headers.get('referer') }}" class="btn btn-default pull-right">{{'backend.global.back'|trans}}</a>
            </h1>
            {% set item1 = {'text': 'backend.setting.settings'|trans, 'icon':'fa fa-user'} %}
            {% set items = [item1] %}
            {{ filters.breadcrum(items) }}
        </div>
    </div>
    <!-- /.row -->

    <div class="row">

        {{ form_start(form, {'action': path('backend_settings_update'), 'method': 'POST'}) }}
            <div class="col-lg-6">
                <div class="form-group">
                    {{ form_label(form.dateFormat)}}
                    {{ form_widget(form.dateFormat, {'attr':{'class':'form-control'}}) }}
                    {{ form_errors(form.dateFormat) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.hourFormat)}}
                    {{ form_widget(form.hourFormat, {'attr':{'class':'form-control'}}) }}
                    {{ form_errors(form.hourFormat) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form._token) }} 
                    {{ form_widget(form.submit, {'attr':{'class':'btn btn-primary pull-right'}}) }} 
                </div>
            </div>
        {{ form_end(form) }}
    </div>
    <!-- /.row -->

{% endblock %}

{% block scripts %}
{% endblock %}