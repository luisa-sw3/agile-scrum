{% extends 'BackendBundle:Default:main.html.twig' %}
{% block title %}{{'backend.user_role.user_roles'|trans}}{% endblock %}

{% block content %}
    
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                {{'backend.user_role.user_roles'|trans}}
                <a href="{{ path('backend_projects_roles_new',{'projectId':project.id}) }}" class="btn btn-primary pull-right">{{'backend.user_role.new'|trans}}</a>
            </h1>
            {% set item1 = {'text': 'backend.project.projects'|trans, 'url':path('backend_projects'),'icon':'fa fa-archive'} %}
            {% set item2 = {'text': project.name, 'url':path('backend_projects_view',{'id':project.id}),'icon':'fa fa-dashboard'} %}
            {% set item3 = {'text': 'backend.user_role.user_roles'|trans, 'icon':'fa fa-users'} %}
            {% set items = [item1, item2, item3] %}
            
            {{ filters.breadcrum(items) }}
        </div>
    </div>
    <!-- /.row -->
    {{ filters.showMessage('messageSuccess', 'success')}}
    {{ filters.showMessage('messageError', 'danger')}}
    
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>{{ 'backend.user_role.name'|trans }}</th>
                    <th>{{ 'backend.user_role.description'|trans }}</th>
                    <th>{{ 'backend.global.options'|trans }}</th>
                </tr>
            </thead>
            <tbody>
            {% for role in roles %}
                <tr>
                    <td>{{ role.name }}</td>
                    <td>{{ role.description | raw }}</td>
                    <td>
                        {% if role.isManuallyAdded %}
                            <a class="btn btn-default btn-sm" title="{{ 'backend.user_role.edit'|trans }}" href="{{ path('backend_projects_roles_edit',{'projectId':project.id, 'id':role.id}) }}">
                                <i class="fa fa-pencil"></i>
                            </a>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">{{'backend.user_role.no_roles'|trans}}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
