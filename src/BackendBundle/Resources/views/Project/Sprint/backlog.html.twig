{% extends 'BackendBundle:Default:main.html.twig' %}
{% block title %}{{'backend.sprint.backlog'|trans}}{% endblock %}

{% block content %}

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                {{'backend.sprint.backlog'|trans}}
                <a href="{{path('backend_project_product_backlog_new',{'id':project.id, 'sprintId':sprint.id})}}" class="btn btn-primary pull-right">{{'backend.item.new'|trans}}</a>
            </h1>

            {% set item1 = {'text': 'backend.project.projects'|trans, 'url':path('backend_projects'),'icon':'fa fa-archive'} %}
            {% set item2 = {'text': project.name, 'url':path('backend_projects_view',{'id':project.id}),'icon':'fa fa-dashboard'} %}
            {% set item3 = {'text': 'backend.sprint.sprints'|trans, 'url':path('backend_project_sprints',{'id':project.id}), 'icon':'fa fa-rotate-right'} %}
            {% set item4 = {'text': 'backend.sprint.backlog'|trans, 'icon':'fa fa-list'} %}
            {% set items = [item1, item2, item3, item4] %}
            {{ filters.breadcrum(items) }}
        </div>
    </div>
    <!-- /.row -->
    {{ filters.showMessage('messageSuccess', 'success')}}
    {{ filters.showMessage('messageError', 'danger')}}

    <div class="table-responsive rstable">
        {% set dateFormat = project.settings.dateFormat %}
        {% for item in sprintBacklog %}
            <div class="col-lg-12 col-md-12 col-xs-12 no-padding-right main-item">
                <div class="col-xs-10 col-md-10 no-padding-left">
                    <strong>{{ item.getTextType()|trans }} # {{item.consecutive}}</strong><br>
                    <a href="{{ path('backend_project_product_backlog_edit',{'id':project.id, 'itemId':item.id}) }}" class="popover-menu" title="{{ item.title }}" content="{{item.description|raw}}">{{ item.title }}</a>
                    {% if item.creationDate %}
                        <br><span title="{{ 'backend.global.creation_date'|trans }}"><i class="fa fa-calendar"></i> {{ item.creationDate|date(dateFormat) }}</span>
                    {% endif %}
                    <br><span title="{{ 'backend.item.designed_user'|trans }}">
                        <i class="fa fa-user"></i> 
                        {% if item.designedUser is not empty %}
                            {{ item.designedUser }}
                        {% else %}
                            <a href="#">{{'backend.item.assign_user'|trans}}</a>
                        {% endif %}
                    </span>
                </div>
                <div class="col-xs-2 col-md-2 pull-right">
                    {{ filters.itemButtonGroup(item, project, sprint, true) }}
                </div>

                {% if item.children is not empty %}
                    <div class="list-group col-lg-12 col-md-12 container-child">
                        {% for child in item.children %}
                            <div class="list-group-item col-xs-12">
                                <div class="col-xs-10 col-md-10 no-padding-left">
                                    <strong>{{ child.getTextType()|trans }} # {{child.consecutive}}</strong><br>
                                    <a href="{{ path('backend_project_product_backlog_edit',{'id':project.id, 'itemId':child.id}) }}" class="popover-menu" title="{{ child.title }}" content="{{child.description|raw}}">{{ child.title }}</a>
                                    {% if child.creationDate %}
                                        <br><span title="{{ 'backend.global.creation_date'|trans }}"><i class="fa fa-calendar"></i> {{ child.creationDate|date(dateFormat) }}</span>
                                    {% endif %}
                                    <br><span title="{{ 'backend.item.designed_user'|trans }}">
                                        <i class="fa fa-user"></i> 
                                        {% if child.designedUser is not empty %}
                                            {{ child.designedUser }}
                                        {% else %}
                                            <a href="#">{{'backend.item.assign_user'|trans}}</a>
                                        {% endif %}
                                    </span>
                                </div>
                                <div class="col-xs-2 pull-right no-padding-right">
                                    {{ filters.itemButtonGroup(child, project, sprint, true) }}
                                </div>
                            </div>

                            {% if child.children is not empty %}
                                <div class="list-group col-lg-12 col-md-12 container-child no-padding-right">
                                    {% for lastChild in child.children %}
                                        <div class="list-group-item col-xs-12">
                                            <div class="col-xs-10 col-md-10 no-padding-left">
                                                <strong>{{ lastChild.getTextType()|trans }} # {{lastChild.consecutive}}</strong><br>
                                                <a href="{{ path('backend_project_product_backlog_edit',{'id':project.id, 'itemId':lastChild.id}) }}" class="popover-menu" title="{{ lastChild.title }}" content="{{lastChild.description|raw}}">{{ lastChild.title }}</a>
                                                {% if lastChild.creationDate %}
                                                    <br><span title="{{ 'backend.global.creation_date'|trans }}"><i class="fa fa-calendar"></i> {{ lastChild.creationDate|date(dateFormat) }}</span>
                                                {% endif %}
                                                <br><span title="{{ 'backend.item.designed_user'|trans }}">
                                                    <i class="fa fa-user"></i> 
                                                    {% if lastChild.designedUser is not empty %}
                                                        {{ lastChild.designedUser }}
                                                    {% else %}
                                                        <a href="#">{{'backend.item.assign_user'|trans}}</a>
                                                    {% endif %}
                                                </span>
                                            </div>
                                            <div class="col-xs-2 pull-right no-padding-right">
                                                {{ filters.itemButtonGroup(lastChild, project, sprint, true) }}
                                            </div>
                                        </div>
                                            
                                        {% if lastChild.children is not empty %}
                                            <div class="list-group col-lg-12 col-md-12 container-child no-padding-right">
                                                {% for lastestChild in lastChild.children %}
                                                    <div class="list-group-item col-xs-12">
                                                        <div class="col-xs-10 col-md-10 no-padding-left">
                                                            <strong>{{ lastestChild.getTextType()|trans }} # {{lastestChild.consecutive}}</strong><br>
                                                            <a href="{{ path('backend_project_product_backlog_edit',{'id':project.id, 'itemId':lastestChild.id}) }}" class="popover-menu" title="{{ lastestChild.title }}" content="{{lastestChild.description|raw}}">{{ lastestChild.title }}</a>
                                                            {% if lastestChild.creationDate %}
                                                                <br><span title="{{ 'backend.global.creation_date'|trans }}"><i class="fa fa-calendar"></i> {{ lastestChild.creationDate|date(dateFormat) }}</span>
                                                            {% endif %}
                                                            <br><span title="{{ 'backend.item.designed_user'|trans }}">
                                                                <i class="fa fa-user"></i> 
                                                                {% if lastestChild.designedUser is not empty %}
                                                                    {{ lastestChild.designedUser }}
                                                                {% else %}
                                                                    <a href="#">{{'backend.item.assign_user'|trans}}</a>
                                                                {% endif %}
                                                            </span>
                                                        </div>
                                                        <div class="col-xs-2 pull-right no-padding-right">
                                                            {{ filters.itemButtonGroup(lastestChild, project, sprint, true) }}
                                                        </div>
                                                    </div>
                                                        
                                                    {% if lastestChild.children is not empty %}
                                                        <div class="list-group col-lg-12 col-md-12 container-child no-padding-right">
                                                            {% for endChild in lastestChild.children %}
                                                                <div class="list-group-item col-xs-12">
                                                                    <div class="col-xs-10 col-md-10 no-padding-left">
                                                                        <strong>{{ endChild.getTextType()|trans }} # {{endChild.consecutive}}</strong><br>
                                                                        <a href="{{ path('backend_project_product_backlog_edit',{'id':project.id, 'itemId':endChild.id}) }}" class="popover-menu" title="{{ endChild.title }}" content="{{endChild.description|raw}}">{{ endChild.title }}</a>
                                                                        {% if endChild.creationDate %}
                                                                            <br><span title="{{ 'backend.global.creation_date'|trans }}"><i class="fa fa-calendar"></i> {{ endChild.creationDate|date(dateFormat) }}</span>
                                                                        {% endif %}
                                                                        <br><span title="{{ 'backend.item.designed_user'|trans }}">
                                                                            <i class="fa fa-user"></i> 
                                                                            {% if endChild.designedUser is not empty %}
                                                                                {{ endChild.designedUser }}
                                                                            {% else %}
                                                                                <a href="#">{{'backend.item.assign_user'|trans}}</a>
                                                                            {% endif %}
                                                                        </span>
                                                                    </div>
                                                                    <div class="col-xs-2 pull-right no-padding-right">
                                                                        {{ filters.itemButtonGroup(endChild, project, sprint, false) }}
                                                                    </div>
                                                                </div>
                                                            {% endfor %}
                                                        </div>
                                                    {% endif %}
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                            
                                    {% endfor %}
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block scripts %}
    $(".create-related-item").fancybox({
        width: '840px',
        height: '500px',
        autoSize: true,
        autoScale: false,
        autoDimensions: false,
    });

    $(".delete-item").click(function () {
        var object = $(this);
        var itemId = object.attr('item-id');

        bootbox.dialog({
        message: "{{'backend.item.removal_method_message'|trans}}<br><strong>1. {{'backend.item.cascade_delete'|trans}}: </strong>{{'backend.item.cascade_delete_message'|trans}}<br><strong>2. {{'backend.item.simple_delete'|trans}}: </strong>{{'backend.item.simple_delete_message'|trans}}",
            title: "{{'backend.item.delete'|trans}}",
            buttons: {
                success: {
                    label: "{{'backend.item.cascade_delete'|trans}}",
                    className: "btn-danger",
                    callback: function () {
                        deleteItem(itemId, "{{constant('BackendBundle\\Entity\\Item::DELETE_CASCADE')}}");
                    }
                },
                danger: {
                    label: "{{'backend.item.simple_delete'|trans}}",
                    className: "btn-danger",
                    callback: function () {
                        deleteItem(itemId, "{{constant('BackendBundle\\Entity\\Item::DELETE_SIMPLE')}}");
                    }
                },
                main: {
                    label: "{{'backend.global.cancel'|trans}}",
                    className: "btn-default",
                    callback: function () {

                    }
                }
            }
        });
    });
{% endblock %}

{% block functions_javascript %}
    function deleteItem(itemId, mode) {
        $.ajax({
            type: 'POST',
            url: "{{path('backend_project_product_backlog_delete',{'id':project.id})}}",
            dataType: 'json',
            data: {itemId: itemId, mode:mode},
            success: function (r)
            {
                if (r.result == '__OK__') {
                    window.location.reload();
                } else {
                    bootbox.alert(r.msg);
                }
            },
            error: function (r)
            {
                bootbox.alert("{{'backend.global.unknown_error'|trans}}")
            }
        });
    }
{% endblock %}
