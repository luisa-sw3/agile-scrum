{% extends 'BackendBundle:Default:main.html.twig' %}
{% block title %}{{project}}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                {{ project }}
                <a href="{{ app.request.headers.get('referer') }}" class="btn btn-default pull-right">{{'backend.global.back'|trans}}</a>
            </h1>
            {% set item2 = {'text': project.name, 'url':path('backend_projects_view', { 'id': project.id }), 'icon':'fa fa-dashboard'} %}
            {% set item3 = {'text': 'backend.project.dashboard'|trans, 'icon':'fa fa-dashboard'} %}
            {% set items = [item2, item3] %}
            {{ filters.breadcrum(items) }}
        </div>
    </div>

    
    {{ filters.showMessage('messageSuccess', 'success')}}
    {{ filters.showMessage('messageError', 'danger')}}        
            
    {% set dateFormat = project.settings.dateFormat %}
    {% set fullDateFormat = project.settings.fullDateFormat %}
    
    <div class="row">
        <div class="col-lg-2 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-12 text-center">
                            <i class="fa fa-list fa-5x"></i>
                        </div>
                    </div>
                </div>
                <a href="{{ path('backend_project_product_backlog', { 'id': project.id }) }}">
                    <div class="panel-footer">
                        <span class="pull-left">{{ 'backend.backlog.product_backlog'|trans }}</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-2 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-12 text-center">
                            <i class="fa fa-rotate-right fa-5x"></i>
                        </div>
                    </div>
                </div>
                <a href="{{ path('backend_project_sprints',{'id':project.id}) }}">
                    <div class="panel-footer">
                        <span class="pull-left">{{ 'backend.sprint.sprints'|trans }}</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-2 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-12 text-center">
                            <i class="fa fa-file-text-o fa-5x"></i>
                        </div>
                    </div>
                </div>
                <a href="#">
                    <div class="panel-footer">
                        <span class="pull-left">{{ 'backend.report.reports'|trans }}</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-2 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-12 text-center">
                            <i class="fa fa-users fa-5x"></i>
                        </div>
                    </div>
                </div>
                <a href="{{ path('backend_project_team', { 'id': project.id }) }}">
                    <div class="panel-footer">
                        <span class="pull-left">{{ 'backend.user_project.project_team'|trans }}</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-2 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-12 text-center">
                            <i class="fa fa-cogs fa-5x"></i>
                        </div>
                    </div>
                </div>
                <a href="{{ path('backend_projects_edit', { 'id': project.id }) }}">
                    <div class="panel-footer">
                        <span class="pull-left">{{ 'backend.project.settings'|trans }}</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
    </div>
    
    <div class="table-responsive">
        <legend>{{ 'backend.project.details'|trans }}</legend>
        <table class="table" border="0">
            <tbody>
                <tr>
                    <th width="230px">{{ 'backend.project.description'|trans }}</th>
                    <td>{{ project.description |raw }}</td>
                    <th width="230px">{{ 'backend.project.start_date'|trans }}</th>
                    <td>{% if project.startDate %}{{ project.startDate|date(dateFormat) }}{% endif %}</td>
                </tr>
                <tr>
                    <th>{{ 'backend.project.creation_date'|trans }}</th>
                    <td>{% if project.creationDate %}{{ project.creationDate|date(fullDateFormat) }}{% endif %}</td>
                    <th>{{ 'backend.project.estimated_date'|trans }}</th>
                    <td>{% if project.estimatedDate %}{{ project.estimatedDate|date(dateFormat) }}{% endif %}</td>
                </tr>
                <tr>
                    <th>{{ 'backend.setting.date_format'|trans }}</th>
                    <td>{{ project.settings.dateFormat }}</td>
                    <th>{{ 'backend.setting.hour_format'|trans }}</th>
                    <td>{{ project.settings.hourFormat }}</td>
                </tr>
                <tr>
                    <th>{{ 'backend.global.owner'|trans }}</th>
                    <td>{{ project.userOwner }}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
