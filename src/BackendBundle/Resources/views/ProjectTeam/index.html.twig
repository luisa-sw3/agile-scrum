{% extends 'BackendBundle:Default:main.html.twig' %}
{% block title %}{{'backend.project.projects'|trans}}{% endblock %}

{% block content %}
    
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                {{'backend.user_project.project_team'|trans}}
                <a href="{{ path('backend_projects_new') }}" class="btn btn-primary pull-right">{{'backend.project.new'|trans}}</a>
            </h1>
            {% set item1 = {'text': 'backend.project.projects'|trans, 'url':path('backend_projects'),'icon':'fa fa-archive'} %}
            {% set item2 = {'text': project.name, 'url':path('backend_projects_show',{'id':project.id}),'icon':'fa fa-eye'} %}
            {% set item3 = {'text': 'backend.user_project.project_team'|trans, 'icon':'fa fa-users'} %}
            {% set items = [item1, item2, item3] %}
            {{ filters.breadcrum(items) }}
        </div>
    </div>
    <!-- /.row -->
    {{ filters.showMessage('messageSuccess', 'success')}}
    {{ filters.showMessage('messageError', 'danger')}}
    
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>{{ 'backend.user.name'|trans }}</th>
                    <th>{{ 'backend.user.lastname'|trans }}</th>
                    <th>{{ 'backend.user.email'|trans }}</th>
                    <th>{{ 'backend.user_project.assignation_date'|trans }}</th>
                    <th>{{ 'backend.user_project.designed_role'|trans }}</th>
                    <th>{{ 'backend.global.options'|trans }}</th>
                </tr>
            </thead>
            <tbody>
            {% set dateFormat = app_settings.getSettings.dateFormat %}
            {% for userProject in users %}
                <tr>
                    <td>{{ userProject.user.name }}</td>
                    <td>{{ userProject.user.lastname }}</td>
                    <td>
                        {{ userProject.user.email }}
                    </td>
                    <td>
                        {{ userProject.assignationDate(dateFormat) }}
                    </td>
                    <td>
                        {{ userProject.role }}
                    </td>
                    <td>
                        <a class="btn btn-default btn-sm" title="{{ 'backend.user_project.unassign_user'|trans }}" href="#">
                            <i class="fa fa-close"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">{{ 'backend.user_project.empty_list'|trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
